@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

@if (ViewData["Erros"] != null)
{
    foreach (var item in (List<string>)ViewData["Erros"])
    {
        <li>@item</li>
    }
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input asp-for="PasswordHash" class="form-control" required type="password" min="6" max="100" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>